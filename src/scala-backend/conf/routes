# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Traits storage
OPTIONS        /api/traits                controllers.CharlistFeatureController.options(p = "list", id = "")
GET            /api/traits                controllers.CharlistFeatureController.lookup(col = "traits", category ?= "", term = "")
POST           /api/traits                controllers.CharlistFeatureController.add(col = "traits")
OPTIONS        /api/traits/default        controllers.CharlistFeatureController.options(p = "base", id = "")
GET            /api/traits/default        controllers.CharlistFeatureController.create(col = "traits")
OPTIONS        /api/traits/search         controllers.CharlistFeatureController.options(p = "elem", id = "")
GET            /api/traits/search         controllers.CharlistFeatureController.lookup(col = "traits", category ?= "", term)
OPTIONS        /api/traits/:id            controllers.CharlistFeatureController.options(p = "elem", id)
GET            /api/traits/:id            controllers.CharlistFeatureController.get(col = "traits", id)
# Skills storage
