# Charlist storage
OPTIONS        /api/chars                 controllers.CharlistController.options(p = "list", id = "")
GET            /api/chars                 controllers.CharlistController.list
POST           /api/chars                 controllers.CharlistController.add()
OPTIONS        /api/chars/default         controllers.CharlistController.options(p = "base", id = "")
GET            /api/chars/default         controllers.CharlistController.create(p = "")
OPTIONS        /api/chars/:id             controllers.CharlistController.options(p = "elem", id)
GET            /api/chars/:id             controllers.CharlistController.get(id)
PUT            /api/chars/:id             controllers.CharlistController.update(id, replace: Boolean = true)
PATCH          /api/chars/:id             controllers.CharlistController.update(id, replace: Boolean = false)
DELETE         /api/chars/:id             controllers.CharlistController.delete(id)
OPTIONS        /api/chars/:id/pic         controllers.CharlistController.options(p = "file", id)
GET            /api/chars/:id/pic         controllers.CharlistController.getPic(id)
PUT            /api/chars/:id/pic         controllers.CharlistController.storePic(id)
