# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET           /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
#GET           /assets/*file        controllers.Assets.at(path="/public", file)

# Traits storage
OPTIONS        /api/char/trait              controllers.TraitController.options(p = "base", name = "")
GET            /api/char/trait              controllers.TraitController.create
OPTIONS        /api/char/traits             controllers.TraitController.options(p = "list", name = "")
GET            /api/char/traits             controllers.TraitController.list
OPTIONS        /api/char/trait/:name        controllers.TraitController.options(p = "elem", name)
GET            /api/char/trait/:name        controllers.TraitController.get(name)
# Charlists components storage
OPTIONS        /api/char/skill              controllers.CharlistController.options(p = "base", id = "")
GET            /api/char/skill              controllers.CharlistController.create(p = "skill")
OPTIONS        /api/char/teq                controllers.CharlistController.options(p = "base", id = "")
GET            /api/char/teq                controllers.CharlistController.create(p = "teq")
OPTIONS        /api/char/weap               controllers.CharlistController.options(p = "base", id = "")
GET            /api/char/weap               controllers.CharlistController.create(p = "weap")
OPTIONS        /api/char/armor              controllers.CharlistController.options(p = "base", id = "")
GET            /api/char/armor              controllers.CharlistController.create(p = "armor")
OPTIONS        /api/char/item               controllers.CharlistController.options(p = "base", id = "")
GET            /api/char/item               controllers.CharlistController.create(p = "item")
# Charlist storage
OPTIONS        /api/char                    controllers.CharlistController.options(p = "base", id = "")
POST           /api/char                    controllers.CharlistController.add()
GET            /api/char                    controllers.CharlistController.create(p = "")
OPTIONS        /api/chars                   controllers.CharlistController.options(p = "list", id = "")
GET            /api/chars                   controllers.CharlistController.list
OPTIONS        /api/char/:id                controllers.CharlistController.options(p = "elem", id)
GET            /api/char/:id                controllers.CharlistController.get(id)
PUT            /api/char/:id                controllers.CharlistController.update(id, replace: Boolean = true)
PATCH          /api/char/:id                controllers.CharlistController.update(id, replace: Boolean = false)
DELETE         /api/char/:id                controllers.CharlistController.delete(id)
OPTIONS        /api/char/:id/pic            controllers.CharlistController.options(p = "file", id)
GET            /api/char/:id/pic            controllers.CharlistController.getPic(id)
PUT            /api/char/:id/pic            controllers.CharlistController.storePic(id)