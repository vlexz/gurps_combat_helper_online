# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                    controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.at(path="/public", file)

#Auth
POST          /signup              controllers.AuthController.signup
POST          /login               controllers.AuthController.login
POST          /logout              controllers.AuthController.logout
GET           /secure              controllers.AuthController.securedSampleAction

#Charlists storage
POST          /api/char            controllers.CharlistController.add()
GET           /api/chars           controllers.CharlistController.list
GET           /api/char/:id        controllers.CharlistController.get(id:String)
GET           /api/char            controllers.CharlistController.create()
PATCH         /api/char/           controllers.CharlistController.update()
DELETE        /api/char/:id        controllers.CharlistController.delete(id: String)