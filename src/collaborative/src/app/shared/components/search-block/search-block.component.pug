.search_block
  input(type='text', [(ngModel)]='searchTerm', placeholder='Search')
  span or
  a((click)='addNew()') Add New
  span or
  a((click)='viewAll()') View All
  .search_results(*ngIf='search_results')
    table
      tr: td: a((click)='cancelSearch()') Cancel Search
      tr(*ngFor='let res of search_results; let i = index')
        td: a((click)='addFromSearch(i)') {{res.name}}
  dialog-container(*ngIf='showAll', title='Full List', (done)='closeFullList()')
    div
      label Filter: 
        input(type='text', [(ngModel)]='filterTerm')
    div.item-list
      span.item(*ngFor='let item of filteredItems', (click)='addFromFullList(item.id)') {{item.name}}

