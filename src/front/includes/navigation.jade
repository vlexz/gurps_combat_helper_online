.nav
    .nav-inner
        .container
            ul.nav.nav-pills(ng-controller="UsersCtrl")
                li(role='presentation' class=(current == 'home' ? 'active' : '') ): a(href='/') Home
                li(role='presentation' class=(current == 'travel' ? 'active' : '') ): a(href='/travel.html') Travels
                li(role='presentation' class=(current == 'edge_protection' ? 'active' : '') ): a(href='/edge_protection.html') Edge Protection
                li(role='presentation' class=(current == 'armor' ? 'active' : '') ): a(href='/armor.html') Armor
                li(role='presentation' class=(current == 'characters' ? 'active' : '') ): a(href='/characters.html') Characters
                li(role='presentation' class=(current == 'charlist' ? 'active' : '') ): a(href='/charlist.html') Charlist
                li(role='presentation' class=(current == 'sorcery' ? 'active' : '') ): a(href='/sorcery.html') Sorcery                
                p.navbar-text.navbar-right(ng-if="!user.loggedIn")
                    a.navbar-link(ng-click="login()" ng-if="!user.loggedIn") Log In&nbsp; 
                    a.navbar-link(ng-click="register()" ng-if="!user.loggedIn") Register&nbsp;
                p.navbar-text.navbar-right(ng-if="user.loggedIn") Hello {{user.name}}!  
                    a.navbar-link(ng-click="logout()" ng-if="user.loggedIn") Log Out               
