.modal-header
    h3.modal-title {{title}}
.modal-body
    .row(ng-repeat="item in items")
        .col-md-2 {{item.name}}
        .col-md-4.button-group
            button.btn.btn-default(ng-click="load($index)") Load
            button.btn.btn-default(ng-click="delete($index)") Delete
.modal-footer    
    button.btn.btn-default(ng-click="cancel()") Cancel